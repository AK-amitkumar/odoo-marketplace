<?xml version="1.0"?>
<openerp>
    <data>

	<menuitem id="market_configuration" parent="market_product.menu_markets" name="Configuration" sequence="3"/>
	
	<!-- Categories -->
    
    <record id="market_category_action" model="ir.actions.act_window">
        <field name="name">Categories</field>
        <field name="res_model">product.category</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>            
    </record>
	
    <menuitem id="market_category_menu" parent="market_configuration" action="market_category_action" sequence="1"/>
    
    <!-- Commodities -->
	
	<record id="view_market_commodity_tree" model="ir.ui.view">
        <field name="name">market.commodity.tree</field>
        <field name="model">market.commodity</field>
        <field name="arch" type="xml">
            <tree string="Commodities" >
                <field name="name"/>
                <field name="commodityabbr"/>
                <field name="source_market"/>
				<field name="slug"/>
            </tree>
      	</field>
    </record>
	
	<record id="market_commodity_action" model="ir.actions.act_window">
        <field name="name">Commodities</field>
        <field name="res_model">market.commodity</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>            
    </record>
	
    <menuitem id="market_commodity_menu" parent="market_configuration" action="market_commodity_action" sequence="2"/>
	
	<!-- Varieties -->
	
	<record id="view_market_variety_tree" model="ir.ui.view">
        <field name="name">market.variety.tree</field>
        <field name="model">market.variety</field>
        <field name="arch" type="xml">
            <tree string="Varieties" >
                <field name="name"/>
                <field name="commodity_id"/>
				<field name="slug"/>
            </tree>
      	</field>
    </record>
	
	<record id="market_variety_action" model="ir.actions.act_window">
        <field name="name">Varieties</field>
        <field name="res_model">market.variety</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>            
    </record>
	
    <menuitem id="market_variety_menu" parent="market_configuration" action="market_variety_action" sequence="3"/>
	
	<!-- Packages -->
	
	<record id="view_market_package_tree" model="ir.ui.view">
        <field name="name">market.package.tree</field>
        <field name="model">market.package</field>
        <field name="arch" type="xml">
            <tree string="Packages" >
                <field name="name"/>
                <field name="commodity_id"/>
                <field name="weight_lb"/>
				<field name="slug"/>
            </tree>
      	</field>
    </record>
	
	<record id="market_package_action" model="ir.actions.act_window">
        <field name="name">Packages</field>
        <field name="res_model">market.package</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>            
    </record>
	
    <menuitem id="market_package_menu" parent="market_configuration" action="market_package_action" sequence="4"/>
	
	<!-- Attributes -->
    
    <record id="market_attribute_action" model="ir.actions.act_window">
        <field name="name">Attributes</field>
        <field name="res_model">product.attribute</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>            
    </record>
	
    <menuitem id="market_attribute_menu" parent="market_configuration" action="market_attribute_action" sequence="5"/>
    
    <!-- Synch Data -->
	
	<record id="view_market_data_form" model="ir.ui.view">
        <field name="name">market.data.form</field>
        <field name="model">market.data</field>
        <field name="arch" type="xml">
            <form string="Market Data" >
	            <sheet>
	                <group>
	                	<field name="model_ids" >
	                		<tree string="Models">
	                			<field name="name" string="Name"/>
								<field name="model" />
							</tree>
						</field>
                        <field name="database" />
	                </group>
	                <footer>
					 	<button name="synchronize_objects" string="Synchronize" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
				</sheet>
            </form>
        </field>
    </record>
	
	<record id="market_data_action" model="ir.actions.act_window">
        <field name="name">Synch Data</field>
        <field name="res_model">market.data</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>            
        <field name="view_id" ref="view_market_data_form"/>
        <field name="target">new</field> 
    </record>
	
    <menuitem id="market_data_menu" parent="market_configuration" action="market_data_action" sequence="7"/>

	
    </data>
</openerp>
